<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AMSTuckShopApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Menu Style -->
    <style name="navigationTheme">

        <!-- Text colour and icon when selected-->
        <item name="colorPrimary">@color/text_colour</item>
        <!-- Background colour-->
        <item name="colorControlHighlight">@color/blue</item>
    </style>

    <style name="Theme.AMSTuckShopApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AMSTuckShopApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AMSTuckShopApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>